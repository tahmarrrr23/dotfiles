#!/usr/bin/env bash

set -e

root_directory="$(cd "$(dirname "$0")/.." && pwd)"
src_directory="$root_directory/src"

printf "Backup Homebrew formulas & casks\n"
brew bundle dump -f --file="$src_directory/homebrew/Brewfile" --no-vscode

printf "Backup VSCode extensions\n"
brew bundle dump -f --file="$src_directory/vscode/Brewfile" --vscode
