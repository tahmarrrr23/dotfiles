{
  "$schema": "https://schema.linearmouse.app/0.10.2",
  "schemes": [
    {
      "if": {
        "device": {
          "category": "mouse",
          "productID": "0x101b",
          "productName": "ATK Mouse 8K Dongle",
          "vendorID": "0x373b"
        }
      },
      "pointer": {
        "acceleration": 0.7,
        "disableAcceleration": true
      },
      "scrolling": {
        "acceleration": {
          "vertical": 1
        },
        "distance": {
          "vertical": 3
        },
        "reverse": {
          "vertical": true
        },
        "speed": {
          "vertical": 0
        }
      }
    }
  ]
}
