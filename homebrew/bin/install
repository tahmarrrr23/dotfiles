#!/bin/sh
set -eu
cd "$(dirname "$0")"
root="$(dirname "$(pwd)")"
[ ! -d "/opt/homebrew" ] && echo "please install homebrew" && exit 1

# restore from backup
/opt/homebrew/bin/brew bundle \
  --brews --casks --taps \
  --no-lock \
  --force \
  --file="$root/Brewfile"

# setup
"$(brew --prefix)"/opt/fzf/install --no-bash --no-fish --all
